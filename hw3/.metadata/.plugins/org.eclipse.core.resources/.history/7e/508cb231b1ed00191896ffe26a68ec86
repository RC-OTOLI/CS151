package presentation;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.geom.Rectangle2D;

public class myRectangle {
	private int xc, yc, width, height;
	private Rectangle2D.Double view;
	int final BUFFER_SPACE = 10;
	
	public myRectangle(int w, int h) {
		this.width = w;
		this.height = h;
		
		view = new Rectangle2D.Double(BUFFER_SPACE, BUFFER_SPACE, BUFFER_SPACE+width, BUFFER_SPACE+height);
	}
	
	public void draw(Graphics2D gc) {
		Color oldColor = gc.getColor();
		gc.fill(view);
		gc.setColor(oldColor);
	}
}
