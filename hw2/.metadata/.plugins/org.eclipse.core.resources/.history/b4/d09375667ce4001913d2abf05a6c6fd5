package stackMac;

public class Add implements Command {

	private Double arg1;
	private Double arg2;
	
	
	public Add() {
		super();
	}
	
	
	@Override
	public void execute() throws StackTooShortException {
		try {
			arg1 = StackMachine.stack.pop();
			arg2 = StackMachine.stack.pop();
		}
		catch(StackEmptyExcption e) {
			throw new StackTooShortException("Too few elements in the stack!");
		}
	}

}
